<config>
    <modules>
        <mes_gateway>
            <version>1.1.0</version>
        </mes_gateway>
    </modules>
	
    <frontend>
        <routers>
            <gateway>
                <use>standard</use>
                <args>
                    <module>Mes_Gateway</module>
                    <frontName>gateway</frontName>
                </args>
            </gateway>
        </routers>
    </frontend>
	
    <global>
        <models>
            <gateway>
				<class>Mes_Gateway_Model</class>
			</gateway>			
        </models>
		
		<blocks>   
			<gateway>
				<class>Mes_Gateway_Block</class>
			</gateway>
		</blocks>
		
        <resources>
            <gateway_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </gateway_write>
            <gateway_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </gateway_read>
        </resources>
    </global>
	
    <default>
        <payment>
            <gateway>
                  <model>gateway/Paymentmodel</model>
                  <title>Merchant e-Solutions Payment Gateway</title>
                  <order_status>pending</order_status>
                  <title>Credit Card</title>
                  <active>0</active>
                  <allowspecific>0</allowspecific>
                  <cctypes>AE,VI,MC,DI</cctypes>
                  <payment_action>authorize</payment_action>
				  <client_reference_number>Order #[orderid]</client_reference_number>
				  <bypassssl>0</bypassssl>
				  <simulator>1</simulator>
				  <use_proxy>0</use_proxy>
            </gateway>
        </payment>
    </default>
</config>
