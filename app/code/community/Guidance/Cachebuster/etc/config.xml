<config>
    <modules>
        <Guidance_Cachebuster>
            <version>0.1.0</version>
        </Guidance_Cachebuster>
    </modules>
    <global>
        <helpers>
            <guidance_cachebuster>
                <class>Guidance_Cachebuster_Helper</class>
            </guidance_cachebuster>
        </helpers>
        <models>
            <guidance_cachebuster>
                <class>Guidance_Cachebuster_Model</class>
            </guidance_cachebuster>
        </models>
    </global>
    <default>
        <system>
            <guidance_cachebuster>
                <is_enabled>0</is_enabled>
                <file_extensions>js,css,png,jpg,gif</file_extensions>
            </guidance_cachebuster>
        </system>
    </default>
    <frontend>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <guidance_cachebuster>
                        <type>singleton</type>
                        <class>guidance_cachebuster/observer</class>
                        <method>core_block_abstract_to_html_after</method>
                    </guidance_cachebuster>
                </observers>
            </core_block_abstract_to_html_after>
            <controller_action_postdispatch>
                <observers>
                    <guidance_cachebuster>
                        <type>singleton</type>
                        <class>guidance_cachebuster/observer</class>
                        <method>controller_action_postdispatch</method>
                    </guidance_cachebuster>
                </observers>
            </controller_action_postdispatch>
        </events>
    </frontend>
</config>