<?xml version="1.0"?>
<config>
  <sections>
    <sociable translate="label" module="sociable">
      <label>Sociable</label>
      <tab>awall</tab>
      <frontend_type>text</frontend_type>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <general translate="label">
          <label>General</label>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <enable translate="label">
              <label>Enable</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enable>
            <auto_arrange translate="label">
              <label>Auto-arrange links by stats</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <!--<source_model>sociable/config_source_position</source_model>!-->
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </auto_arrange>
            <block_position translate="label">
              <label>Block position</label>
              <frontend_type>multiselect</frontend_type>
              <source_model>sociable/config_source_position</source_model>
              <backend_model>sociable/config_backend_position</backend_model>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </block_position>
          </fields>
        </general>
        <bit_ly translate="label">
          <label>Bit.ly</label>

          <sort_order>20</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <register_link translate="label">
              <label>Register at bit.ly</label>
              <frontend_type>text</frontend_type>
              <frontend_model>sociable/system_config_form_fieldset_link</frontend_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </register_link>
            <api_version translate="label">
              <label>API version</label>
              <frontend_type>text</frontend_type>
              <sort_order>20</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_version>
            <api_login translate="label">
              <label>API Login</label>
              <frontend_type>text</frontend_type>
              <sort_order>30</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_login>
            <api_key translate="label">
              <label>API Key</label>
              <frontend_type>text</frontend_type>
              <sort_order>40</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </api_key>
          </fields>
        </bit_ly>
      </groups>
    </sociable>
  </sections>
</config>